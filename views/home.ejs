<link rel="stylesheet" href="/css/home.css">
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
<script src="https://kit.fontawesome.com/74894dafb2.js" crossorigin="anonymous"></script><div id="myDiv">
<div id="myDiv">   
    <form method="post" action="/habits/create">
        <input type="text" name="habit" placeholder="Add new habit" required/>
        <button> Add Habits </button>
    </form>

    <% for(let habit of habits) { %>
        <div class="habit-details">
            <%= habit.habit %>
            <a href="/habits/favorite-habit/?id=<%= habit._id %>" >
                <% if(habit.favorite) { %>
                    <i class="fa-solid fa-star"></i>
                    <% } else { %>
                    <i class="fa-regular fa-star"></i>
                <% } %>
            </a>
            <a href="/habits/remove/?id=<%= habit._id %>">
                <i class="fa-solid fa-trash"></i>
            </a>
        </div>
        <div class="daily-updates">
            <% for(let i = 0; i < weeklyDate.length; i++) { %>
                <div>
                    <p><%= weeklyDate[i] %></p>
                    <a href="/habits/status-update/?id=<%= habit._id %>&date=<%= weeklyDate[i] %>">
                        <% if(habit.isDone[i] ==='yes'){ %>
                            <i class="fas fa-check-circle"></i>
                        <% } else if(habit.isDone[i] ==='no'){ %>
                            <i class="fas fa-times-circle"></i>
                        <% } else { %>
                            <i class="fas fa-minus-circle"></i>
                        <% } %>
                    </a>
                </div>
            <% } %>     
        </div>
    <% } %>
</div>